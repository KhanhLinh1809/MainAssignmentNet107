@model List<dynamic>
@{
    ViewData["Title"] = "Quản Lý Đơn Hàng";
}

<h1>Danh Sách Đơn Hàng</h1>

<table class="table table-bordered table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>Mã Đơn</th>
            <th>Khách Hàng</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>#@item.CartId</td>
                <td>@item.CustomerName</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.TotalAmount.ToString("N0") đ</td>
                <td>
                    @if (item.Status == "Pending") { <span class="badge bg-warning text-dark">Chờ Duyệt</span> }
                    else if (item.Status == "Approved") { <span class="badge bg-success">Đã Duyệt</span> }
                    else if (item.Status == "Cancelled") { <span class="badge bg-danger">Đã Hủy</span> }
                    else { <span>@item.Status</span> }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CartId" class="btn btn-sm btn-info text-white"><i class="bi bi-eye"></i> Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
