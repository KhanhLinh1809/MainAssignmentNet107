@model List<MainAssignmentNet107.Models.Customer>
@{
    ViewData["Title"] = "Quản Lý Tài Khoản";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Danh Sách Tài Khoản</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus"></i> Thêm Tài Khoản</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên Đăng Nhập</th>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Vai Trò</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.Username</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>
                    @if (item.Role == "Admin") { <span class="badge bg-danger">Admin</span> }
                    else if (item.Role == "Staff") { <span class="badge bg-info text-dark">Staff</span> }
                    else { <span class="badge bg-secondary">Customer</span> }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                    @if (item.Role != "Admin") 
                    {
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa user này?');"><i class="bi bi-trash"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
