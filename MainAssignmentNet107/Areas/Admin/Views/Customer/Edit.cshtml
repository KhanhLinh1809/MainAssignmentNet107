@model MainAssignmentNet107.Models.Customer
@{
    ViewData["Title"] = "Cập Nhật Tài Khoản";
}

<h1>Cập Nhật Tài Khoản: @Model.Username</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="Username" /> <!-- Cannot change username -->
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label">Tên Đăng Nhập</label>
                <input value="@Model.Username" class="form-control" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Mật Khẩu Mới (Để trống nếu không đổi)</label>
                <input asp-for="Password" type="password" class="form-control" value="" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Họ và Tên</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label">Vai Trò</label>
                <select asp-for="Role" class="form-select">
                    <option value="Customer">Khách Hàng (Customer)</option>
                    <option value="Staff">Nhân Viên (Staff)</option>
                    <option value="Admin">Quản Trị Viên (Admin)</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>
